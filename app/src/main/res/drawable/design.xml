<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!--这个是按钮边框设置为四周 并且宽度为1-->
    <item
        android:right="15dp"
        android:left="15dp"
        android:top="15dp"
        android:bottom="15dp">
        <shape>
            <!--这个是按钮中的字体与按钮内的四周边距-->
            <padding android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>